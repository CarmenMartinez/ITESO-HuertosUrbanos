<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_event"
        android:gravity="center" />

    <EditText
        android:id="@+id/activity_event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/create_event_hint"/>

    <EditText
        android:id="@+id/activity_event_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/create_event_place_hint"/>

    <EditText
        android:id="@+id/activity_event_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:inputType="date" />

    <Button
        android:id="@+id/saveEvent"
        android:style="@style/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/submit" />


</LinearLayout>