<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/title_padding"
    android:paddingLeft="@dimen/title_padding"
    android:paddingRight="@dimen/title_padding">

    <android.support.v7.widget.CardView
        xmlns:card_view= "http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/background_username"
                android:orientation="vertical">
            </LinearLayout>

            <TextView
                android:id="@+id/title"
                android:layout_below="@id/background_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/title_padding"
                android:paddingRight="@dimen/title_padding"
                android:textColor="#000"
                android:textSize="@dimen/recipe_title"
                android:background="#ffa000"
                android:textAlignment="center"
                />

            <TextView
                android:id="@+id/period"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:paddingBottom="@dimen/recipe_description_padding_bottom"
                android:paddingLeft="@dimen/title_padding"
                android:paddingRight="@dimen/title_padding"
                android:textSize="@dimen/recipe_description" />

            <TextView
                android:id="@+id/months"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/period"
                android:paddingBottom="@dimen/recipe_description_padding_bottom"
                android:paddingLeft="@dimen/title_padding"
                android:paddingRight="@dimen/title_padding"
                android:textSize="@dimen/recipe_date"
                android:textColor="@color/light_gray"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>