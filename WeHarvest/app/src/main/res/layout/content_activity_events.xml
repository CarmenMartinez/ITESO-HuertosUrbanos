<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/activity_coordinator_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView_activity_events"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

        <TextView
            android:id="@+id/activity_events_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User"/>

        <TextView
            android:id="@+id/activity_events_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title"/>

        <TextView
            android:id="@+id/activity_events_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="description"/>

        <TextView
            android:id="@+id/activity_events_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="date"/>

        <TextView
            android:id="@+id/activity_events_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="place"/>



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:src="@drawable/eventos" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/eventos" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/eventos" />

        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/activity_events_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/buttonsColor"
        android:layout_margin="10dp"
        android:src="@mipmap/add"
        android:layout_gravity="bottom|right"
        app:layout_anchor="@id/ScrollView_activity_events"
        app:layout_anchorGravity="bottom|right|end"
        android:onClick="createEvent" />

</android.support.design.widget.CoordinatorLayout>