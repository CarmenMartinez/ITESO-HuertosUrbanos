<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/title_padding"
    android:paddingLeft="@dimen/title_padding"
    android:paddingRight="@dimen/title_padding">

    <android.support.v7.widget.CardView
        xmlns:card_view= "http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        card_view:cardBackgroundColor="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/background_username"
                android:background="@color/greenDark">
                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/recipe_description_padding_bottom"
                    android:paddingLeft="@dimen/title_padding"
                    android:paddingRight="@dimen/title_padding"
                    android:paddingTop="@dimen/title_padding"
                    android:textSize="@dimen/recipe_username"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/title_padding"
                    android:paddingBottom="@dimen/recipe_description_padding_bottom"
                    android:textSize="@dimen/recipe_date"
                    android:textColor="@android:color/white"
                    android:gravity="right"
                    android:padding="@dimen/title_padding"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/username"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/title"
                android:layout_below="@id/background_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/recipe_description_padding_bottom"
                android:paddingLeft="@dimen/title_padding"
                android:paddingRight="@dimen/title_padding"
                android:textSize="@dimen/recipe_title"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:paddingBottom="@dimen/recipe_description_padding_bottom"
                android:paddingLeft="@dimen/title_padding"
                android:paddingRight="@dimen/title_padding"
                android:textSize="@dimen/recipe_description"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/description"
                android:paddingBottom="@dimen/recipe_description_padding_bottom"
                android:paddingLeft="@dimen/title_padding"
                android:paddingRight="@dimen/title_padding"
                android:textSize="@dimen/recipe_category"
                android:textColor="@android:color/white"/>



        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
